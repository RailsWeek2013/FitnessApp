<%= form_for @user_datum , :html => { :multipart => true }  do |f| %>
  <% if @user_datum.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user_datum.errors.count, "error") %> prohibited this user_datum from being saved:</h2>

      <ul>
      <% @user_datum.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :Vorname %><br>
    <%= f.text_field :firstname %>
  </div>
  <div class="field">
    <%= f.label :Nachname %><br>
    <%= f.text_field :lastname %>
  </div>
  <div class="field">
    <%= f.label :Geschlecht %><br>
    <%= f.select :sex, options_for_select(["Männlich", "Weiblich"]) %>
  </div>
  <div class="field">
    <%= f.label :Körpergewicht %><br>
    <%= f.text_field :weight %>
    in kg
  </div>
  <div class="field">
    <%= f.label :Körpergröße %><br>
    <%= f.text_field :bodysize %>
    in cm
  </div>
  <div class="field">
    <%= f.label :Geburtsdatum %><br>
    <%= f.date_select :birthday, :start_year => Date.current.year, :end_year => 1920 %>
  </div>
  <div>
  	<%= f.label :Foto %><br>
  	<%= f.file_field :photo %>
  </div>
  <p><div class="actions">
    <%= f.submit %>
  </div></p>
<% end %>
